.task-section__horizontal {
  display: flex;
  width: max-content;
  padding: 0 10px;
}

.task-section__container {
  overflow-x: auto;
}

.task-section__container::-webkit-scrollbar {
  display: none;
}

.task-section__vertical {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
}