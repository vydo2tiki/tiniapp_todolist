.add-button {
  position: absolute;
  bottom: 30px;
  right: 30px;

  background-color: var(--color-core);
  box-shadow: 0px 0px 3px #333;
  
  width: var(--box-width);
  height: var(--box-width);
  border: none;
  border-radius: calc(var(--box-width)/2);

  display: flex;
  align-items: center;
  transition: background-color ease-in-out 0.5s, box-shadow linear 0.3s;
}

.add-button:hover, .add-button:active {
  background-color: var(--color-white);
  box-shadow: 0px 0px 8px #ccc;
}


