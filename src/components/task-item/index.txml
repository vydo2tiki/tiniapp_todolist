<import-sjs from="../../utils/common.sjs" name="{isType}"></import-sjs>

<view>
  <template name="horizontal">
    <view onTap="_onNavigateTo" class="task-item-horizontal">
      {{item.name}}
    </view>
  </template>

  <template name="vertical">
    <view onTap="_onNavigateTo" class="task-item-vertical">
      {{item.name}}
    </view>
  </template>

  <template name="list-completed">
    <list-item onClick="_onNavigateTo" padding upperSubtitle="Description">
      <view>{{item.name}}</view>
      <view slot="suffix">
        <icon type="success_glyph" size="24" color="#009900" />
      </view>
    </list-item>
  </template>

  <template name="list">
    <list-item onClick="_onNavigateTo" padding upperSubtitle="Description">
      <view>{{item.name}}</view>
      <view slot="suffix">
        <icon type="warning_glyph" size="24" color="#ffcc00" />
      </view>
    </list-item>
  </template>

  <template
    is="{{isType(type, item.completed)}}"
    data="{{item}}"
  />
</view>






