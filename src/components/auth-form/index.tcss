.auth-form__header {
  padding: 20px 10px;
  margin-bottom: 50px;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.auth-form__header__title {
  position: relative;
  font-size: 18x;
  font-weight: bold;
  padding-bottom: 10px;

  color: #ccc;
  width: calc(50% - 10px);  
  text-align: center;
}

.auth-form__header__title--active {
  color: var(--color-core);
}

.auth-form__header__title::after {
  content: " ";
  height: 5px;
  width: 100%;

  position: absolute;
  left: 0;
  bottom: 0;

  background-color: currentColor;
  border-radius: 10px;
}
