<view class="step-item">
  <input    
    class="auth__form-control"
    placeholder="Email"
    type="email"

    onInput="handleChangeInput"
    data-name="email"
  />

  <input    
    class="auth__form-control"
    placeholder="Mật khẩu"
    password="{{true}}"

    onInput="handleChangeInput"
    data-name="password"
  />

  <view class="text-right mb-large">
    <text class="link">Quên mật khẩu ?</text>
  </view>

  <view class="text-center mb-medium">
    <text style="color: red" >{{message}}</text>
  </view>
  
  <auth-button onTapActionButton="handleLogin" title="Đăng nhập" />
</view>